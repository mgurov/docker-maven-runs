<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!--
     Simple demo project demonstrating the usage of rhuss/docker-maven-plugin
  -->
  <groupId>com.github.mgurov</groupId>
  <artifactId>docker-maven-runs</artifactId>
  <version>0.0.1</version>
  <packaging>pom</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.jolokia</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <version>0.13.3</version>
        <configuration>
          <images>

            <image>
              <name>local/a</name>
              <build>
                <entryPoint>
                  <shell>echo container A</shell>
                </entryPoint>
              </build>
              <run>
                <log>
                  <prefix>A</prefix>
                </log>
                <wait>
                  <log>container A</log>
                </wait>
              </run>
            </image>

            <image>
              <name>local/b</name>
              <build>
                <entryPoint>
                  <shell>echo container B</shell>
                </entryPoint>
              </build>
              <run>
                <log>
                  <prefix>B</prefix>
                </log>
                <wait>
                  <log>container B</log>
                </wait>
              </run>
            </image>

            <image>
              <name>ubuntu:14.04</name>
              <run>
                <entrypoint>echo container C</entrypoint>
                <log>
                  <prefix>C</prefix>
                </log>
                <wait>
                  <log>container C</log>
                </wait>
              </run>
            </image>

            <image>
              <name>ubuntu:14.04</name>
              <run>
                <entrypoint>echo container D</entrypoint>
                <log>
                  <prefix>D</prefix>
                </log>
                <wait>
                  <log>container D</log>
                </wait>
              </run>
            </image>


          </images>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
